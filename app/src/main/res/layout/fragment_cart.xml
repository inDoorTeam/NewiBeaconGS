<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gs.ibeacon.fcu.slideswipe.Fragment.CartFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/cartLocationText"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <info.hoang8f.widget.FButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="移動至目標"
        fbutton:buttonColor="@color/buttonColor"
        fbutton:shadowColor="@color/black_de"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="20dp"
        android:id="@+id/moveToTargetButton"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/cartLocationText" />

    <info.hoang8f.widget.FButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自動跟隨"
        fbutton:buttonColor="@color/buttonColor"
        fbutton:shadowColor="@color/black_de"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="20dp"
        android:id="@+id/autoFollowButton"
        android:layout_marginStart="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/cartLocationText" />

</RelativeLayout>



