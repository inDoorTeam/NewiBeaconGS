<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="20dp"
        android:id="@+id/til_et_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/lostNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            android:hint="遺失物品名稱"
            android:text="錢包"
            android:gravity="center_horizontal" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_et_name2"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/costText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            android:hint="選賞金額"
            android:text="3000"
            android:gravity="center_horizontal" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_et_name3"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/lostTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            android:hint="遺失時間"
            android:text="2016/10/10"
            android:gravity="center_horizontal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_et_name4"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/descriptText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            android:hint="物品描述"
            android:text="粉紅色的零錢包"
            android:gravity="center_horizontal"  />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="319dp"
        android:layout_height="176dp"
        fbutton:srcCompat="@drawable/lost_item"
        android:layout_marginTop="20dp"
        android:id="@+id/imageView2" />

    <info.hoang8f.widget.FButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="發布遺失物"
        fbutton:buttonColor="@color/buttonColor"
        fbutton:shadowColor="@color/black_de"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="20dp"
        android:id="@+id/postButton"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/cartLocationText"
         />


</LinearLayout>